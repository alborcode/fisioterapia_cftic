{% extends 'base.html.twig' %}

{% block title %}Citas{% endblock %}

{% block body %}
    <h1>Citas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idcita</th>
                <td>{{ cita.idcita }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ cita.fecha ? cita.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ cita.hora ? cita.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ cita.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_citas_index') }}">back to list</a>

    <a href="{{ path('app_citas_edit', {'idcita': cita.idcita}) }}">edit</a>

    {{ include('citas/_delete_form.html.twig') }}
{% endblock %}
