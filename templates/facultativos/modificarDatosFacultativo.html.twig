{% extends 'base.html.twig' %}

{% block title %}Modificar Facultativo{% endblock %}

{% block body %}

    <section class="py-5 mt-5">
        <div class="container py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-12">
                    <div class="card">
                        <div class="card-body text-center d-flex flex-column align-items-center">
                            <div class="row mb-4 mb-lg-5">
                                    <p class="fw-bold text-success mb-2">Intranet - Menu Administrativo</p>
                                    <h3 class="fw-bold">Modificar Perfil Facultativo</h3>
                            </div>
                            <div class="row mb-4 mb-lg-2">
                                {# Incluimos Boton Volver #}
                                {% include 'menuVolver.html.twig' %}
                            </div>
                            <div class="form-group">
                                {# Formulario Modificar Perfil Paciente #}
                                <form method="POST" action="{{ path('modificarDatosFacultativo', { idusuario: datosUsuario.idusuario, idfacultativo: datosFacultativo.idfacultativo }) }}">
                                    <div class="row mb-2 mb-lg-5">
                                        <div class="col-sm-3">
                                            Codigo Usuario
                                            <input type="number" name="txtIdusuario" value="{{datosUsuario.idusuario}}" class="form-control" id="txtIdusuario" readonly="readonly" disabled="disabled">
                                        </div>
                                        <div class="col-sm-6">
                                            Email
                                            <input type="email" name="txtEmail" value="{{datosUsuario.email}}" class="form-control" id="txtEmail" pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$" autofocus="true">
                                        </div>
                                        <div class="col-sm-3">
                                            Código Facultativo
                                            <input type="number" name="txtIdfacultativo" value="{{datosFacultativo.idfacultativo}}" readonly="readonly" disabled="disabled" class="form-control" id="txtIdfacultativo">
                                        </div>
                                    </div>    
                                    <div class="row mb-2 mb-lg-2">
                                        <div class="col-sm-4">
                                            Nombre
                                            <input type="text" name="txtNombre" value="{{datosFacultativo.nombre}}" class="form-control" id="txtNombre">
                                        </div>
                                        <div class="col-sm-4">
                                            Primer Apellido
                                            <input type="text" name="txtApellido1" value="{{datosFacultativo.apellido1}}" class="form-control" id="txtApellido1">
                                        </div>
                                        <div class="col-sm-4">
                                            Segundo Apellido
                                            <input type="text" name="txtApellido2" value="{{datosFacultativo.apellido2}}" class="form-control" id="txtApellido2">
                                        </div>
                                    </div>  
                                    <div class="row mb-2 mb-lg-2">
                                        <div class="col-sm-4">
                                            Teléfono
                                            <input type="tel" name="txtTelefono" value="{{datosFacultativo.telefono}}" class="form-control" id="txtTelefono" pattern="(\+34|0034|34)?[ -]*(6|7|8|9)[ -]*([0-9][ -]*){8}">
                                        </div>
                                    </div> 
                                    <div class="row mb-2 mb-lg-2">
                                        <div class="col-sm-6">
                                            Especialidad    
                                            <select name="comboEspecialidad" class="form-control" id="comboEspecialidad">
                                                {% for Especialidad in datosEspecialidades %}
                                                    {% if Especialidad == datosFacultativo.especialidad %}
                                                        {# Se le pone atributo selected para que se quede seleccionado #}
                                                        <option value="{{ Especialidad.idespecialidad }}" selected> {{ Especialidad.especialidad }}</option>
                                                    {% else %}                                        
                                                        <option value="{{ Especialidad.idespecialidad }}"> {{ Especialidad.especialidad }}</option>
                                                    {% endif %}
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>      
                                    <div class="row mb-2 mb-lg-2">
                                        <div class="col">
                                            <button class="btn btn-primary shadow d-block w-100" type="submit">
                                                Modificar Datos Facultativo
                                            </button>
                                        </div>    
                                    </div>                          
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}