{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

    <section class="py-5 mt-5">
        <div class="container py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-12">
                    <div class="card">
                        <div class="card-body text-center d-flex flex-column align-items-center">
                            <div class="row mb-4 mb-lg-5">
                                {# Incluimos el Menu Administrativo#}
                                {% include 'menuAdministrativo.html.twig' %}
                            </div>
                            <div class="row mb-4 mb-lg-5">
                                    <p class="fw-bold text-success mb-2">Intranet - Menu Administrativo</p>
                                    <h6 class="fw-bold">Seleccione una opción del menu superior</h6>
                            </div>

                            {% if mensaje is defined %}
                                <h1 style="color:blue;"> {{mensaje}} </h1>
                            {% endif %}   
                            
                            <footer class="bg-primary-gradient">
                                <div class="container py-4 py-lg-5">
                                <hr />
                                    <div class="text-muted d-flex justify-content-between align-items-center pt-3">
                                        <p class="mb-0">Copyright © 2022 FisioSalud</p>
                                    </div>
                                </div>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}