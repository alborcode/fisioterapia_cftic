{% extends 'base.html.twig' %}

{% block title %}Alta Aseguradora{% endblock %}

{% block body %}

    <section class="py-5 mt-5">
        <div class="container py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-12">
                    <div class="card">
                        <div class="card-body text-center d-flex flex-column align-items-center">
                            <div class="row mb-4 mb-lg-5">
                                {# Incluimos el Menu para Boton de Volver#}
                                {% include 'menuVolver.html.twig' %}
                            </div>
                            <div class="row mb-4 mb-lg-5">    
                                    <p class="fw-bold text-success mb-2">Aseguradoras</p>
                                    <h2 class="fw-bold">Alta Aseguradora</h2>
                            </div>
                            <div class="form-group">
                                {# Formulario Alta Aseguradora #}
                                {{ form_start(aseguradoraForm) }}
                                    <div class="row">       
                                        <div class="col-sm-12 col-xl-12">
                                            {{ form_row(aseguradoraForm.nombre) }}
                                        </div>    
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8 col-xl-8">       
                                            {{ form_row(aseguradoraForm.telefono, {label: 'Teléfono Contacto'}) }}
                                        </div>
                                    </div>
                                    <div class="row"> 
                                        <div class="col-sm-8 col-xl-8">
                                            {{ form_row(aseguradoraForm.direccion, {label: 'Dirección Paciente', required: false}) }}
                                        </div> 
                                        <div class="col-sm-4 col-xl-4">      
                                            {{ form_row(aseguradoraForm.codigopostal, {label: 'Código Postal', required: false}) }}
                                        </div> 
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 col-xl-6"> 
                                            {{ form_row(aseguradoraForm.poblacion, {label: 'Localidad', required: false}) }}
                                        </div> 
                                        <div class="col-sm-6 col-xl-6">
                                            {{ form_row(aseguradoraForm.provincia, {label: 'Provincia', required: false}) }}
                                        </div> 
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8">       
                                            {{ form_row(aseguradoraForm.email, {label: 'Email Contacto'}) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <button class="btn btn-primary shadow d-block w-100" type="submit">
                                                Alta Aseguradora
                                            </button>
                                        </div>    
                                    </div>
                                {{ form_end(aseguradoraForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}