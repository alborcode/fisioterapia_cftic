        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% block javascripts_headers %}
        <script src="{{ asset('js/theme.js') }}"></script>
        {% endblock %}
    
    </head>
    <body id="page-top">
        <div id="wrapper">
            {# Incluimos el Menu #}
            {{ include('menu.html.twig') }}

            <div class="d-flex flex-column" id="content-wrapper">
                <div id="content">
                    {# Incluimos el Body #}
                    {% block body %}
                    {% endblock %}

                    {# Mostramos todos los mensajes Flash de tipo Success #}
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {# Recupera el valor (que no se estÃ¡ asignando a una variable y, por lo tanto, se "elimina" de la carpeta flash) #}
                    {# $flashbag->get("notice"); #}
                    
                </div>
            </div>

            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    {# Incluimos el Pie #}
                    {{ include('pie.html.twig') }}
                </div>
            </footer>

        </div>
        
    </body>
</html>