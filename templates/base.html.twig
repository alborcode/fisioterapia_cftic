<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
        <meta name="description" content="Vinos Ribera del Duero" />
        <title>{% block title %}Gestion Clinica{% endblock %}</title>

        {% block stylesheets %}
            {# <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&amp;display=swap"> #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts_headers %}       
            {# <script src="{{ asset('js/jquery.min.js') }}"></script> #}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    
    </head>
    <body id="page-top">
        <div id="wrapper">
            {# Incluimos el Menu #}
            {{ include('menu.html.twig') }}

            <div class="d-flex flex-column" id="content-wrapper">
                <div id="content">
                    {# Incluimos el Body #}
                    {% block body %}
                    {% endblock %}

                    {# Mostramos todos los mensajes Flash de tipo Success #}
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {# Recupera el valor (que no se estÃ¡ asignando a una variable y, por lo tanto, se "elimina" de la carpeta flash) #}
                    {# $flashbag->get("notice"); #}
                    
                </div>
                
                <footer class="bg-white sticky-footer">
                    <div class="container my-auto">
                        {# Incluimos el Pie #}
                        {{ include('pie.html.twig') }}
                    </div>
                </footer>

            </div>
        </div>
        
    </body>
</html>