{% extends 'base.html.twig' %}

{% block title %}Resetear tu password{% endblock %}

{% block body %}
    <section class="py-5 mt-5">
        <div class="container py-5">
            <div class="row mb-2 mb-lg-2">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <p class="fw-bold text-success mb-2">Resetear tu password</p>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card">
                        <div class="card-body text-center d-flex flex-column align-items-center">
                            <div class="svg-wrapper bg-image shadow-1-strong rounded-lg my-2">
                               <img class="img-responsive" src="{{ asset ('img/svg/reset.svg') }}" style="text-align: center;" width="50%" height="50%"/> 
                            </div>
                            
                            {% for flash_error in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            <h1>Resetear tu password</h1>

                            {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                                <div>
                                    <small>
                                        Introduce una direccion de email para enviar link para resetear password.
                                    </small>
                                </div>

                                <button class="btn btn-primary">Enviar Link Reseteo password a email</button>
                            {{ form_end(requestForm) }}

                            <div class="row mb-4 mb-lg-4">
                                <div class="mb-3">
                                    <a  href="{{ path('app_login') }}"> Conectarse </a>
                                    <span> / </span>
                                    <a  href="{{ path('app_register') }}"> Registrarse </a>
                                </div>     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <section>

{% endblock %}
