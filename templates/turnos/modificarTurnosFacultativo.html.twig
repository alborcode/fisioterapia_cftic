                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Día de la Semana</th>
                                                <th>Hora Inicio</th>
                                                <th>Hora Fin</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {# Si esta definida la variable muestra los datos de los turnos del facultativo #}
                                            {# {% if datosTurnos is defined %} #}
                                            {% for Turno in datosTurnos %}    
                                                <tr>
                                                    <td scope="row">{{ Turno.diasemana}}</td>
                                                    <td>{{ Turno.horainicio}}:00</td>
                                                    <td>{{ Turno.horafin}}:00</td>
                                                </tr>
                                            {% endfor %}
                                            {# {% endif %} #}
                                        </tbody>
                                    </table> 
                                </div>

                            </div>
